<% include partials/header %>

<div class="container top">
    <div class="row">
        <h1 style="text-align: center">Add Campground</h1>
        
        <form action="/campgrounds" method="post">
           
           <div class="form-group">
                <input  class="form-control yelp form-group" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input  class="form-control yelp form-group" type="text" name="image" placeholder="image url">
            </div>
             <div class="form-group">
                 <textarea class="form-control"  name="description"
                 placeholder="description" rows="5"></textarea>
             </div>
             <div class="form-group">
                 <button class="btn btn-lg btn-default btn-block">Submit</button>
             </div>
            
            
        </form>
    </div>
</div>
<% include partials/footer %>